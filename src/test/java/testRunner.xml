<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Suite" verbose="10" configfailurepolicy="skip">

    <listeners>
        <listener class-name="Runner.TestRunnerListener" />
    </listeners>

    <test name="Mini Cart Feature">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="Runner.MiniCartTest" />
        </classes>
    </test>

    <test name="Cart Feature">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="Runner.CartTest" />
        </classes>
    </test>

    <test name="User Journey Feature">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="Runner.UserJourneyTest" />
        </classes>
    </test>

</suite>